<div class="container" style="width: 300px; padding-top: 100px">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field mb-3">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, class: "form-label col-auto" %><br />
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "form-label" %>
      </div>
    <% end %>

    <div class="actions mb-3">
      <%= f.submit "Log in", class: "btn btn-success" %>
    </div>
  <% end %>

  <!--<div class="card">
    <%= render "devise/shared/links" %>
  </div>-->
  <%= link_to "Sign up", new_registration_path(resource_name) %><br/>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br/>
  <div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item bg-primary"><i class="fab fa-facebook"></i><%= link_to " Sign in with Facebook", omniauth_authorize_path(resource_name, :facebook) %></li>
      <li class="list-group-item bg-danger"><i class="fab fa-google"></i><%= link_to " Sign in with Google", user_google_oauth2_omniauth_authorize_path %></li>
    </ul>
  </div>
  
</div>


