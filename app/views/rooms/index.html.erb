<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <p>Hello, <%= current_messagewriter.username %></p>
      <%= render 'form', room: Room.new %>
      <hr />

      <% @rooms.each do |room| %>
        <%= link_to room do %>
          <div class="card mb-2">
            <div class="card-body">
              <%= room.name %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="col-9">
      <% if @room.present? %>
        <div class="chat-room">
          <nav class="navbar navbar-light bg-light mb-4">
            <span class="navbar-brand" href="#"><%= @room.name %></span>
          </nav>
          <% @room.messages.each do |message| %>
            <div class="message mb-2 <%= 'me' if message.messagewriter == current_messagewriter %>">
              <div class="content-container">
                <div class="content">
                  <%= message.content %>
                </div>
                <div class="author">
                  <%= message.messagewriter.username %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new, room: @room %>
          </div>
        </div>
        
      <% end %>
    </div>
  </div>
</div>

